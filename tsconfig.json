{
	"version": "2.0.0",
	"compilerOptions": {
		"declaration": false,
		"module": "umd",
		"noImplicitAny": true,
		"outDir": "_build/",
		"baseUrl": ".",
		"paths": {
			"dojo-core/*": [
				"node_modules/dojo-core/dist/umd/*"
			],
			"dojo-has/*": [
				"node_modules/dojo-has/*"
			],
			"dojo-shim/*": [
				"node_modules/dojo-shim/dist/umd/*"
			]
		},
		"removeComments": false,
		"sourceMap": true,
		"target": "es5",
		"moduleResolution": "node"
	},
	"files": [
		"./node_modules/dojo-typings/custom/symbol-shim/symbol-shim.d.ts",
		"./node_modules/dojo-typings/custom/intern/intern.d.ts",
		"./node_modules/dojo-typings/custom/leadfoot/leadfoot.d.ts",
		"./node_modules/dojo-typings/custom/dojo2/dojo.d.ts"
	],
	"include": [
		"./src/**/*.ts",
		"./tests/**/*.ts"
	]
}
